<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReviewJujurAdministrator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ReviewJujurAdministrator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="page_heading">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="page_heading.medium">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="form">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="background">@drawable/et_shadow</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="card_text">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_text.big">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="content">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="card_text.medium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="search">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="background">@drawable/et_shadow</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="form_label">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="button_text">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="heading">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="heading.big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="heading.medium">
        <item name="android:textSize">15sp</item>
    </style>

</resources>